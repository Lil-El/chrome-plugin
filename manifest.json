{
  "name": "Mino Chrome Plugin",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Hello Plugin",
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png"
  },
  "default_locale": "zh_CN",
  "browser_action": {
    "default_title": "我的标题",
    "default_icon": "image/icon16.png",
    "default_popup": "html/index.html"
  },
  "content_scripts": [
    {
      "js": ["script/index.js"],
      "matches": ["http://*/*", "https://*/*"],
      "run_at": "document_start"
    }
  ],
  "permissions": ["http://*/*", "https://*/*"]
}
